<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/back_date_item"
        android:padding="8dp"
        android:fontFamily="@font/tajawal_light"
        android:id="@+id/date"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="yesterday" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:padding="3dp"
        android:background="@drawable/back_receiver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/message_image"
            android:adjustViewBounds="true"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/ImageMsg"
            app:srcCompat="@drawable/markzucker"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tajawal_regular"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_below="@id/message_image"
            tools:text="مرحبا مرحبا مرحبا مرحبا مرحبا مرح مرحبابا مرحبا مرحبا" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/msg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/message_text"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/tajawal_medium"
            android:textColor="@color/black"
            android:textSize="11sp"
            tools:text="8:26 am" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>