<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Applux" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
<!--        <item name="android:statusBarColor" tools:targetApi="l">#cf47dc</item>-->
        <!-- Customize your theme here. -->


        <item name="android:actionMenuTextColor">@color/purple_500</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
<!--        <item name="android:panelFullBackground">#cccfd9</item>-->
<!--        <item name="android:actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>-->
<!--        <item name="actionOverflowMenuStyle">@style/MyOverflowButtonStyle</item>-->
    </style>

<!--    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">-->
<!--        <item name="android:tint">@color/purple_500</item>-->
<!--    </style>-->
    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/purple_500</item>
    </style>

    <style name="ActionModeTheme" parent="Theme.Applux">
        <item name="actionModeStyle">@style/Base.Widget.AppCompat.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Base.Widget.AppCompat.ActionMode" parent="">
        <item name="background">@color/purple_700</item>

    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="extendOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/radius_shape</item>
    </style>
</resources>