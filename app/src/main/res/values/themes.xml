<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Applux" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
<!--        <item name="android:statusBarColor" tools:targetApi="l">#cf47dc</item>-->
        <!-- Customize your theme here. -->


        <item name="android:actionMenuTextColor">@color/purple_500</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    
    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorSurface">@color/white</item>

        <item name="buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButton</item>
    </style>

    <style name="ActionModeTheme" parent="Theme.Applux">
        <item name="actionModeStyle">@style/Base.Widget.AppCompat.ActionMode</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Base.Widget.AppCompat.ActionMode" parent="">
        <item name="background">@color/purple_700</item>

    </style>

    <style name="CircleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="extendOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:background">@drawable/radius_shape</item>
    </style>

    <style name="PositiveButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/green_600</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="NegativeButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/orange_900</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="MaterialAlertDialog.App.MaterialComponents.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/green_600</item>
    </style>
</resources>